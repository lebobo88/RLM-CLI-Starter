{
    "env": {
        "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
        "RLM_PROJECT_ROOT": "${CLAUDE_PROJECT_DIR}",
        "RLM_AUTOMATION_LEVEL": "SUPERVISED",
        "RLM_OBSERVABILITY": "on",
        "RLM_TRACE_ID": ""
    },
    "teammateMode": "auto",
    "statusLine": {
        "type": "command",
        "command": "python3 .claude/statusline.py"
    },
    "permissions": {
        "allow": [
            "Bash(cat RLM/*)",
            "Bash(ls RLM/*)",
            "Read(RLM/**)",
            "Glob(RLM/**)"
        ],
        "deny": [
            "Bash(rm -rf RLM/specs*)",
            "Bash(rm -rf RLM/tasks*)",
            "Bash(git push --force*)",
            "Bash(git reset --hard*)"
        ]
    },
    "hooks": {
        "UserPromptSubmit": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/user-prompt-inject.sh",
                        "timeout": 5
                    }
                ]
            }
        ],
        "SessionStart": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/session-start.sh",
                        "timeout": 15
                    }
                ]
            }
        ],
        "SessionEnd": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/session-end.sh",
                        "timeout": 15
                    }
                ]
            }
        ],
        "PreToolUse": [
            {
                "matcher": "Bash",
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/pre-tool-safety.sh",
                        "timeout": 10
                    }
                ]
            },
            {
                "matcher": "Edit|Write",
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/pre-tool-safety-edit.sh",
                        "timeout": 10
                    }
                ]
            }
        ],
        "PostToolUse": [
            {
                "matcher": "Bash|Edit|Write",
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/post-tool-log.sh",
                        "timeout": 10
                    }
                ]
            },
            {
                "matcher": "Edit|Write",
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/post-state-write-verify.sh",
                        "timeout": 10
                    }
                ]
            },
            {
                "matcher": "Write|Edit",
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/post-write-validate.sh",
                        "timeout": 15
                    }
                ]
            }
        ],
        "PostToolUseFailure": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/post-tool-failure.sh",
                        "timeout": 5
                    }
                ]
            }
        ],
        "SubagentStart": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/subagent-start.sh",
                        "timeout": 10
                    }
                ]
            }
        ],
        "SubagentStop": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/subagent-stop.sh",
                        "timeout": 10
                    }
                ]
            }
        ],
        "TaskCompleted": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/task-completed.sh",
                        "timeout": 15
                    }
                ]
            }
        ],
        "TeammateIdle": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/teammate-idle.sh",
                        "timeout": 10
                    }
                ]
            }
        ],
        "PreCompact": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/pre-compact-checkpoint.sh",
                        "timeout": 10
                    }
                ]
            }
        ],
        "Stop": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/stop-checkpoint.sh",
                        "timeout": 10
                    }
                ]
            }
        ],
        "Notification": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/notification-handler.sh",
                        "timeout": 5
                    }
                ]
            }
        ]
    }
}
